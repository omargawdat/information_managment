---
interface Props {
  title: string;
  type?: 'definition' | 'example' | 'important' | 'tip';
}

const { title, type = 'definition' } = Astro.props;

const styles = {
  definition: {
    border: 'border-primary-500',
    bg: 'bg-primary-50 dark:bg-primary-900/20',
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />`,
    iconColor: 'text-primary-500'
  },
  example: {
    border: 'border-green-500',
    bg: 'bg-green-50 dark:bg-green-900/20',
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />`,
    iconColor: 'text-green-500'
  },
  important: {
    border: 'border-amber-500',
    bg: 'bg-amber-50 dark:bg-amber-900/20',
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />`,
    iconColor: 'text-amber-500'
  },
  tip: {
    border: 'border-purple-500',
    bg: 'bg-purple-50 dark:bg-purple-900/20',
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />`,
    iconColor: 'text-purple-500'
  }
};

const style = styles[type];
---

<div class={`rounded-lg border-l-4 ${style.border} ${style.bg} p-4 my-4`}>
  <div class="flex items-start gap-3">
    <svg class={`w-5 h-5 mt-0.5 flex-shrink-0 ${style.iconColor}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <Fragment set:html={style.icon} />
    </svg>
    <div>
      <h4 class="font-semibold text-gray-900 dark:text-white mb-2">{title}</h4>
      <div class="text-sm text-gray-700 dark:text-gray-300">
        <slot />
      </div>
    </div>
  </div>
</div>
