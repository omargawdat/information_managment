---
import Header from '../components/Header.astro';
import Navigation from '../components/Navigation.astro';
import { getCollection } from 'astro:content';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Information Management Study Guide' } = Astro.props;

const chapters = await getCollection('chapters');
const sortedChapters = chapters.sort((a, b) => a.data.chapter - b.data.chapter || a.data.order - b.data.order);
---

<!DOCTYPE html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title} | IM Study Guide</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="bg-gray-50 dark:bg-gray-900 text-gray-900 dark:text-gray-100 min-h-screen transition-colors">
    <Header />
    <div class="flex">
      <Navigation chapters={sortedChapters} />
      <main class="flex-1 p-6 lg:p-8 lg:ml-64 mt-16">
        <div class="max-w-4xl mx-auto">
          <slot />
        </div>
      </main>
    </div>
    <script is:inline>
      // Initialize theme from localStorage or system preference
      const theme = localStorage.getItem('theme') ||
        (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
      document.documentElement.classList.toggle('dark', theme === 'dark');
    </script>
  </body>
</html>

<style is:global>
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');

  html {
    font-family: 'Inter', system-ui, sans-serif;
    scroll-behavior: smooth;
  }

  /* Custom scrollbar */
  ::-webkit-scrollbar {
    width: 8px;
    height: 8px;
  }

  ::-webkit-scrollbar-track {
    background: transparent;
  }

  ::-webkit-scrollbar-thumb {
    background: #cbd5e1;
    border-radius: 4px;
  }

  .dark ::-webkit-scrollbar-thumb {
    background: #475569;
  }

  /* Prose styles for markdown content */
  .prose h2 {
    @apply text-2xl font-bold mt-8 mb-4 text-gray-900 dark:text-white border-b border-gray-200 dark:border-gray-700 pb-2;
  }

  .prose h3 {
    @apply text-xl font-semibold mt-6 mb-3 text-gray-800 dark:text-gray-100;
  }

  .prose h4 {
    @apply text-lg font-medium mt-4 mb-2 text-gray-700 dark:text-gray-200;
  }

  .prose p {
    @apply mb-4 leading-relaxed text-gray-700 dark:text-gray-300;
  }

  .prose ul {
    @apply mb-4 ml-6 list-disc space-y-2;
  }

  .prose ol {
    @apply mb-4 ml-6 list-decimal space-y-2;
  }

  .prose li {
    @apply text-gray-700 dark:text-gray-300;
  }

  .prose strong {
    @apply font-semibold text-gray-900 dark:text-white;
  }

  .prose blockquote {
    @apply border-l-4 border-primary-500 pl-4 py-2 my-4 bg-primary-50 dark:bg-primary-900/20 rounded-r-lg;
  }

  .prose code {
    @apply bg-gray-100 dark:bg-gray-800 px-1.5 py-0.5 rounded text-sm font-mono;
  }

  .prose pre {
    @apply bg-gray-100 dark:bg-gray-800 p-4 rounded-lg overflow-x-auto mb-4;
  }

  .prose pre code {
    @apply bg-transparent p-0;
  }

  .prose a {
    @apply text-primary-600 dark:text-primary-400 hover:underline;
  }

  .prose hr {
    @apply my-8 border-gray-200 dark:border-gray-700;
  }

  .prose table {
    @apply w-full mb-6 border-collapse text-sm;
  }

  .prose thead {
    @apply bg-gray-100 dark:bg-gray-800;
  }

  .prose th {
    @apply px-4 py-2 text-left font-semibold text-gray-900 dark:text-white border border-gray-200 dark:border-gray-700;
  }

  .prose td {
    @apply px-4 py-2 text-gray-700 dark:text-gray-300 border border-gray-200 dark:border-gray-700;
  }

  .prose tr:nth-child(even) {
    @apply bg-gray-50 dark:bg-gray-800/50;
  }

  .prose tr:hover {
    @apply bg-gray-100 dark:bg-gray-800;
  }
</style>
